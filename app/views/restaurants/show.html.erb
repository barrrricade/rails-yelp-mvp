<h1>Here Ye go:</h1>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> <br>
<%= link_to "Delete this restaurant", restaurant_path(@restaurant), method: :delete, data: { confirm: 'Delete this review?' }%> <br>
<%= link_to "home" , restaurants_path %>
<br><br>
<%= link_to "write a review", new_restaurant_review_path(@restaurant)  %>
<br>
<h2>Reviews:</h2>

  <h2>Reviews for <%= @restaurant.name %></h2>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %>
      <%= link_to 'Delete', review_path(review), method: :delete, data: { confirm: 'Delete this review?' }  %>
     <br>- <%= review.created_at.strftime('%Y-%m-%d') %></p>
  <% end %>
